{
  "compilerOptions": {
    "module": "ES2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "lib": ["es2019", "DOM"],
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "types": ["node"],
    "typeRoots": ["src/types.ts"],
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/**/*.ts"]
}
